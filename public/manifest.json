{
    "name": "Run, Kachka, Run!",
    "description": "Run fast, jump high — Kachka’s adventure awaits!",
    "version": "1.0.7",
    "manifest_version": 3,
    "background": {},
    "permissions": [
        "storage",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "index.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "public/assets/PixelifySans.ttf",

                "public/assets/sounds/achievement.wav",
                "public/assets/sounds/gameOver.wav",
                "public/assets/sounds/jump.wav",

                "public/assets/duck/ground.png",
                "public/assets/duck/button.png",
                "public/assets/duck/player/dead/dead.png",
                "public/assets/duck/player/dead/dead-outline.png",
                "public/assets/duck/player/duck/duck-1.png",
                "public/assets/duck/player/duck/duck-2.png",
                "public/assets/duck/player/idle/idle-1.png",
                "public/assets/duck/player/idle/idle-2.png",
                "public/assets/duck/player/run/run-1.png",
                "public/assets/duck/player/run/run-2.png",
                "public/assets/duck/player/start.png",
                "public/assets/duck/obstacles/bird/bird-1.png",
                "public/assets/duck/obstacles/bird/bird-2.png",
                "public/assets/duck/obstacles/ground-big-1.png",
                "public/assets/duck/obstacles/ground-big-2.png",
                "public/assets/duck/obstacles/ground-big-3.png",
                "public/assets/duck/obstacles/ground-small-1.png",
                "public/assets/duck/obstacles/ground-small-2.png",
                "public/assets/duck/obstacles/ground-small-3.png"
            ],
            "use_dynamic_url": true
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "/icons/16.png",
            "32": "/icons/32.png",
            "48": "/icons/48.png",
            "128": "/icons/128.png"
        }
    },
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    }
}
